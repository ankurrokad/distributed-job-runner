{
  "name": "distributed-job-runner",
  "version": "0.1.0",
  "private": true,
  "description": "Distributed job runner with NestJS API, BullMQ workers, and Next.js dashboard",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
